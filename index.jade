!!!
html

	head
		meta(charset="utf-8")

		meta(name="apple-mobile-web-app-capable", content="yes")
		meta(name="apple-mobile-web-app-status-bar-style", content="black-translucent")

		meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")

		link(rel="stylesheet", href="ThirdParty/reveal.js/css/reveal.min.css")
		link(rel="stylesheet", href="ThirdParty/reveal.js/css/theme/serif.css", id="theme")
		script
			document.write( '<link rel="stylesheet" href="ThirdParty/reveal.js/css/print/' + ( window.location.search.match( /print-pdf/gi ) ? 'pdf' : 'paper' ) + '.css" type="text/css" media="print">' );
		//if lt IE 9
			script(src="ThirdParty/reveal.js/lib/js/html5shiv.js")

	body
		.reveal
			.slides
				section: include slides/001-intro.jade
				section: include slides/002-definition.jade
				section: include slides/003-signs.jade
				section: include slides/004-cultural.jade
				section: include slides/005-differences.jade
				section: include slides/005a-encoder-differences.jade
				section: include slides/007-problems.jade
				section: include slides/008-framework.jade
				section: include slides/009-experiments.jade
				section: include slides/010-emotions.jade
				section: include slides/020-results.jade
				section: include slides/090-animals.jade
				section: include slides/099-references.jade
				section: include slides/100-fin.jade

		script(src="ThirdParty/reveal.js/lib/js/head.min.js")
		script(src="ThirdParty/reveal.js/js/reveal.min.js")

		script
			// Full list of configuration options available here:
			// https://github.com/hakimel/reveal.js#configuration
			Reveal.initialize({
				controls: true,
				progress: true,
				history: true,
				center: true,

				theme: Reveal.getQueryHash().theme, // available themes are in /css/theme
				transition: Reveal.getQueryHash().transition || 'default', // default/cube/page/concave/zoom/linear/fade/none

				// Optional libraries used to extend on reveal.js
				dependencies: [
					{ src: 'ThirdParty/reveal.js/lib/js/classList.js', condition: function() { return !document.body.classList; } },
					{ src: 'ThirdParty/reveal.js/plugin/markdown/showdown.js', condition: function() { return !!document.querySelector( '[data-markdown]' ); } },
					{ src: 'ThirdParty/reveal.js/plugin/markdown/markdown.js', condition: function() { return !!document.querySelector( '[data-markdown]' ); } },
					{ src: 'ThirdParty/reveal.js/plugin/highlight/highlight.js', async: true, callback: function() { hljs.initHighlightingOnLoad(); } },
					{ src: 'ThirdParty/reveal.js/plugin/zoom-js/zoom.js', async: true, condition: function() { return !!document.body.classList; } },
					{ src: 'ThirdParty/reveal.js/plugin/notes/notes.js', async: true, condition: function() { return !!document.body.classList; } }
					// { src: 'plugin/remotes/remotes.js', async: true, condition: function() { return !!document.body.classList; } }
				]
			});
